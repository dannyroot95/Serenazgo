<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.Opciones">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/policia"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione una opciÃ³n"
            android:textAlignment="center"
            android:layout_margin="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/redondo"
            android:layout_height="wrap_content"
            android:backgroundTint="#5bbd00"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/btnIrLogin"
            android:text="Ya tengo cuenta"/>

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/redondo"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="13dp"
            android:textColor="#ffffff"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/btnIrRegistro"
            android:text="Registrarme"/>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>