<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".actividades.Camionetas.RequestCamionetaActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="carro_patrulla.json"
            android:layout_gravity="center"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:scaleType="centerCrop"
            android:id="@+id/animation_patrulla"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textviewLookingPatrulla"
            android:textAlignment="center"
            android:text="BUSCANDO PATRULLA CERCANA..."
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar busqueda"
            android:background="@drawable/redondo"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_margin="20dp"
            android:id="@+id/btnCancelRequest"
            android:textColor="#fff"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>